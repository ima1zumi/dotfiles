{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
      "rootPatterns": [".ccls-root", "compile_commands.json", ".git"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        }
      }
    },
    "steep": {
      "command": "steep",
      "rootPatterns": ["Steepfile"],
      "requireRootPattern": true,
      "args" : ["langserver"],
      "filetypes": ["ruby"]
    },
    "rubocop": {
      "command": "rubocop",
      "rootPatterns": [".rubocop.yml"],
      "requireRootPattern": true,
      "args" : ["--lsp"],
      "filetypes": ["ruby"]
    }
  },
  "clangd.path": "/Users/mi/ghq/github.com/ima1zumi/dotfiles/.config/coc/extensions/coc-clangd-data/install/12.0.1/clangd_12.0.1/bin/clangd",
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true
}
